@using Casino.Models.BookmakerModels
@model IEnumerable<BookmakerModel>
@{
    Layout = null;
}

<div class="col-md-6">
    <div class="table-responsive"> 
        <table id="table-bookmakers" class="table table-striped table-bordered nowrap" style="width:100%">

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="@item.ImageUrl" /></td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.Description2</td>
                        <td>@item.Description3</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
